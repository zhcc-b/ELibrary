<div class="card shadow mb-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h2>All Books</h2>
    <% if logged_in? %> <!-- admin? or logged_in? -->
      <%= link_to "Add New Book", new_book_path, class: "btn btn-success" %>
    <% end %>
  </div>
  <div class="card-body">
    <% if @books.any? %>
      <div class="row">
        <% @books.each do |book| %>
          <div class="col-md-4 mb-4">
            <div class="card h-100">
              <div class="card-body">
                <h5 class="card-title"><%= link_to book.title, book_path(book) %></h5>
                <h6 class="card-subtitle mb-2 text-muted"><%= book.author %></h6>
                <p><span class="badge badge-info"><%= book.category.name %></span></p>
                <p class="card-text"><small><%= truncate(book.description, length: 150) %></small></p>
              </div>
              <div class="card-footer">
                <small class="text-muted">Published: <%= book.published_date.strftime("%b %d, %Y") %></small>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-center">No books available yet.</p>
    <% end %>
  </div>
</div>